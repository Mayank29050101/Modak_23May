<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.chef.ChefActivity"
    android:background="@drawable/bg_menu">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_c1"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_c2"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_c3"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_c4"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_grey"
        android:id="@+id/view_chef"
        app:layout_constraintTop_toBottomOf="@id/guideline_c2"
        app:layout_constraintStart_toEndOf="@id/guideline_c1"
        app:layout_constraintEnd_toStartOf="@id/guideline_c3"/>
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/cardview_c1"
        android:foregroundGravity="center"
        app:cardCornerRadius="40dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/view_chef"
        app:layout_constraintStart_toEndOf="@id/guideline_c1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_myprofile"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_2"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/guideline_c1"
        app:layout_constraintTop_toBottomOf="@id/view_chef"
        app:layout_constraintEnd_toStartOf="@id/guideline_c3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_chef_name"
        android:text="Chef Dazy Petter"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@id/cardview_c1"
        app:layout_constraintTop_toBottomOf="@id/view_chef"/>
    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:id="@+id/rating_chef"
        android:numStars="5"
        android:rating="4.5"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:layout_marginStart="10dp"
        android:outlineSpotShadowColor="#F7C000"
        android:progressTint="#F7C000"
        android:requiresFadingEdge="vertical"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@id/txt_chef_name"
        app:layout_constraintStart_toEndOf="@id/cardview_c1"/>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout_chef"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        app:tabIndicatorColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/cardview_c1"
        app:layout_constraintTop_toBottomOf="@id/guideline_c2"
        app:layout_constraintEnd_toStartOf="@id/guideline_c3"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewpager_chef"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_grey"
        app:layout_constraintStart_toEndOf="@id/cardview_c1"
        app:layout_constraintEnd_toStartOf="@id/guideline_c3"
        app:layout_constraintTop_toBottomOf="@id/tablayout_chef"
        app:layout_constraintBottom_toTopOf="@id/guideline_c4">
    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>