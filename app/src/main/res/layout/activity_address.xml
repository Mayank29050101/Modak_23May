    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$450"
                    android:layout_weight=".8"
                    android:textColor="@color/black"
                    android:textSize="25sp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(2Meals)"
                    android:layout_weight=".2"
                    android:textSize="20sp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/viewcart"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/button_round_loc"
                android:text="View Cart"
                android:textColor="@color/black"
                android:textSize="15sp">
            </androidx.appcompat.widget.AppCompatButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Mode"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:background="#E4E4E4">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/icon_dinein_unselected">
                    </ImageView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="  Dine In"
                        android:textColor="@color/black"
                        android:textSize="20sp">
                    </TextView>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:button="@drawable/custom_checkbox" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/icon_takeout_unselected">
                    </ImageView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="  Take Out"
                        android:textColor="@color/black"
                        android:textSize="20sp">
                    </TextView>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbx1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:button="@drawable/custom_checkbox" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_delivery_selected">
                </ImageView>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:text="  Delivery"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/check2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:button="@drawable/custom_checkbox" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Time"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:background="#E4E4E4">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@drawable/custom_checkbox"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  As soon as possible(ASAP) (US$ 200 Extra)"
                    android:textSize="18sp"
                    android:textColor="@color/black">
                </androidx.appcompat.widget.AppCompatTextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/choose2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@drawable/custom_checkbox"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  30 mins (US$ 150 Extra )"
                    android:textSize="18sp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/choose3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@drawable/custom_checkbox"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  1 hr by 5 PM (US$ 100 Extra)"
                    android:textSize="18sp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/choose4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@drawable/custom_checkbox" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  1:30 hr"
                    android:textSize="18sp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E4E4E4">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type Comments here"
                android:textSize="20sp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E4E4E4">
            </TextView>
            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textColor="@color/white"
                android:backgroundTint="@color/red">
            </Button>


        </LinearLayout>
    </ScrollView>
</LinearLayout>